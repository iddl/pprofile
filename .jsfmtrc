{
    "indent": {
        "value": "    "
    },
    "extensions": [
        "js",
        "jsx"
    ],
    "plugins": [
        "esformatter-jsx",
        "esformatter-quotes"
    ],
    "jsx": {
        "formatJSX": true,
        "attrsOnSameLineAsTag": true,
        "maxAttrsOnTag": 1,
        "firstAttributeOnSameLine": false,
        "alignWithFirstAttribute": true,
        "htmlOptions": {
            "indent_char": " ",
            "indent_size": 4
        }
    },
    "quotes": {
        "type": "single",
        "avoidEscape": false
    }
}
